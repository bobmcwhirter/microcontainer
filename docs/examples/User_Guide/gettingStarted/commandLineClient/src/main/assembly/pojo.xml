<assembly>
  <id>pojo</id>
  <formats>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>src/main/config/pojo-beans.xml</source>
      <destName>service-beans.xml</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <unpack>false</unpack>
      <scope>runtime</scope>
       <excludes>
        <exclude>org.jboss.microcontainer:jboss-aop-mc-int</exclude>
        <exclude>junit:junit</exclude>
      </excludes>
    </dependencySet>
  </dependencySets>
  <componentDescriptors>
    <componentDescriptor>src/main/assembly/common.xml</componentDescriptor>
  </componentDescriptors>
</assembly>
